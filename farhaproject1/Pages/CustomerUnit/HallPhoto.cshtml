@page
@model farhaproject1.Pages.CustomerUnit.HallPhotoModel
@{
    ViewData["Title"] = "HallPhoto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <link  href="~/css/style.css"/>
</head>
<style>
    
    
</style>
<section class="ftco-section justify-content-center text-center bg-light pt-4">
    <div class="container">
        <div class="row justify-content-center pb-2">
            <div class="col-md-12 text-center heading-section ">

                <h1 class="mb-3" style="color:#f58499;">Photo of Decoration</h1>
            </div>
        </div>
        <div class="row   pl-5">
         
            @if (Model.Photo.Count() != 0)
            {
                @foreach (var item in Model.Photo)
                {

                    <div class="col-md-5  pt-2">
                        <div class="place img  ">
                            <div class="text text-center justify-content-center  pt-2">
                                <a href="../img/@item.ImgFile" target="_blank">
                                    <img src="~/img/@item.ImgFile" style=" width:350px;height:340px;" class=" pt-2">

                                </a>

                            </div>
                        </div>
                    </div>

                }
            }

            else
            {
                <p>no photo for thisDecoration</p>
            }
        </div>
      
    </div>
   
</section>

