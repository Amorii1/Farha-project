@page
@model farhaproject1.Pages.AdminUnit.EditHallModel
@{
    ViewData["Title"] = "EditHall";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="~/css/style.css" />

</head>


<section class="ftco-section bg-secondary pt-2" id="rsvp-section">

    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 text-center heading-section">

                <h2 class="mb-3" style="color:#f58499;">Edit Hall ??</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7">
                <form method="post" enctype="multipart/form-data" class="rsvp-form ">
                    <input type="hidden" asp-for="HallInformation.Id" />
                    <input type="hidden" asp-for="HallInformation.AdminId" />
                    <div class="">
                        <div class="form-group">
                            <input type="text" asp-for="HallInformation.HallName" class="form-control" placeholder="Name" />
                            <p asp-validation-for="HallInformation.HallName" class="text-danger"> </p>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="HallInformation.Description" class="form-control" placeholder="Description" />
                            <p asp-validation-for="HallInformation.Description" class="text-danger"> </p>
                        </div>
                        <div class="form-group">
                            <input type="number" asp-for="HallInformation.Size" class="form-control" placeholder="size" />
                            <p asp-validation-for="HallInformation.Size" class="text-danger"> </p>
                        </div>
                        <div class="form-group">
                            <input type="number" asp-for="HallInformation.Price" class="form-control" placeholder="Price" />IQE
                            <p asp-validation-for="HallInformation.Price" class="text-danger"> </p>
                        </div>
                        <div class="form-group">

                            <input type="file" asp-for="img" class="form-control">   <img style="height: 200px; width: 100%; display: block;" src="~/img/@Model.HallInformation.ImgFile">

                        </div>

                        <div class="form-group float-right">
                            <input type="submit" class="btn btn-info py-3 px-5 mr-1 " value="Update" asp-page-handler="Update" />
                        </div>

                        <div class="form-group ">
                            <a asp-page="Index" class="btn btn-primary py-3 px-5 mr-5" value="Back"> Back </a>
                        </div>

                    </div>




                </form>
            </div>
        </div>
    </div>

</section>