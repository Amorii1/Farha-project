@model farhaproject1.Pages.AdminUnit.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700" rel="stylesheet" />

</head>



<section class="ftco-section bg-light" id="when-where-section">
    <form method="post">
        <div class="btn-group float-right" style="padding-right:150px; padding-top:50px;" role="group" aria-label="Button group with nested dropdown">
            <button type="button" class="btn btn-success">Add</button>
            <div class="btn-group" role="group">
                <button id="btnGroupDrop2" type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                    <a class="  dropdown-item" asp-page="AddNewHall" asp-route-AdminId="">New Hall</a>
                    <a class="dropdown-item" asp-page="AddNewDecoration" asp-route-AdminId="">New Decoration</a>
                    <a class="dropdown-item" asp-page="AddNewDanceTeam" asp-route-AdminId="">New Dance Team</a>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center pb-5">
                <div class="col-md-12 text-center heading-section ">

                    <h2 class="mb-3">My Halls</h2>
                </div>
            </div>

            <div class=" row">

                @foreach (var item in Model.Hall)
                {
                    <div class="col-md-4  py-1 px-1   my-2" >
                        <div class="place img" style="background-image: url(../img/b.jpg);">

                            <div class="text text-center">
                                <div class="containers">
                                    <label>
                                        <img style="height: 200px; width: 100%; display: block;" src="~/img/@item.ImgFile">

                                    </label>
                                </div>
                                <h3>@Html.DisplayFor(m => item.HallName)</h3>

                             

                                <p style="background-color:#f5d8d0"> @Html.DisplayNameFor(m => item.Price) : @Html.DisplayFor(m => item.Price)   <i class="fal fa-arrow-to-bottom"></i> </p>
                                <p style="background-color:#f5d8d0"> @Html.DisplayNameFor(m => item.Size) : @Html.DisplayFor(m => item.Size)</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="EditHall">  Edit</a>
                                        <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="DeleteHall">Delete</a>
                                    </li>

                                </ul>
                            </div>

                        </div>
                    </div>

                }


            </div>




        </div>
    </form>
</section>
<section class="ftco-section bg-light" id="when-where-section">
    <form method="post">

        <div class="container">
            <div class="row justify-content-center pb-5">
                <div class="col-md-12 text-center heading-section ">

                    <h2 class="mb-3">Decoration &amp; DanceTeam</h2>
                </div>
            </div>
          
            <div class="col-md-12 text-left heading-section pt-4">
                <h3>my Decoration</h3>
            </div>
            <div class="row">

                @if (Model.Decoration.Count() != 0)
                {
                    @foreach (var item in Model.Decoration)
                    {
                        <div class="col-md-4 px-2 py-2">
                            <div class="place img" style="background-image: url(../img/ph3.jpg);">
                                <div class="text text-center">
                                    <div class="containers">
                                        <label>
                                            <img style="height: 200px; width: 100%; display: block;" src="~/img/@item.ImgFile">

                                        </label>
                                    </div>

                                    <h3 class=" text-dark">@Html.DisplayFor(m => item.Name)</h3>

                                    <p style="background-color:#f5d8d0"> @Html.DisplayNameFor(m => item.Price) : @Html.DisplayFor(m => item.Price)   <i class="fal fa-arrow-to-bottom"></i> </p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="EditDecoration">  Edit</a>
                                            <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="DeleteDecoration">Delete</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>

                    }
                }

                else
                {
                    <div>
                        <p>no Decoration for this Hall</p>
                    </div>}
            </div>
            <div class="col-md-12 text-left heading-section pt-2">
                <h3>My Dance Team</h3>
            </div>

            <div class="row  pb-md-5 ">

                <br />
                @if (Model.DanceTeam.Count() != 0)
                {

                    @foreach (var item in Model.DanceTeam)
                    {

                        <div class="col-md-4 px-2 py-2">
                            <div class="place img" style="background-image: url(../img/ph2.jpg);">
                                <div class="text text-center">

                                   
                                    <h3 class=" text-dark">@Html.DisplayFor(m => item.Name)</h3>

                                    <p style="background-color:#f5d8d0"> @Html.DisplayNameFor(m => item.Price) : @Html.DisplayFor(m => item.Price)   <i class="fal fa-arrow-to-bottom"></i> </p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="EditDecoration">  Edit</a>
                                            <a class="btn btn-info" asp-route-Id="@item.Id" asp-page="DeleteDecoration">Delete</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>

                    }}
                else
                {
                    <div>
                        <p>no Dance Team for this Hall</p>
                    </div>}
            </div>
            
        </div>
    </form>
</section>



