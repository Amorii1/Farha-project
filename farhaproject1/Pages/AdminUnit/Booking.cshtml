@page
@model farhaproject1.Pages.AdminUnit.BookingModel
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class=" float-right pt-5 pr-4">
        <a class="btn btn-info float-right mr-4 mb-3" asp-page="AddNewBooking">addNewBooking </a>
    </div>

<div>
    @if (Model.customer.Count() == 0)
    {
        <p>No customer has been added! Add new customer</p>
    }
    else
    {
        <table class="table table-striped  border-info border mt-5 ">
            <tr class="table-secondary">
                <th></th>
                <th>
                    @Html.DisplayNameFor(m => m.customer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.customer[0].PhoneNumber)
                </th>

                <th>
                    Hall Name
                </th>
                <th>
                    Decoration Name
                </th>
                <th>
                    DanceTeam Name
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.customer[0].CustomerDate)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model.customer)
            {
        <tr>
            <td></td>
            <td class="text-secondary">
                @Html.DisplayFor(m => item.Name)
            </td>
            <td class="text-secondary">
                @Html.DisplayFor(m => item.PhoneNumber)
            </td>

            <td class="text-secondary">
                @Html.DisplayFor(m => item.HallInformation.HallName)
            </td>
            <td class="text-secondary">
                @Html.DisplayFor(m => item.Decoration.Name)
            </td>
            <td class="text-secondary">
                @Html.DisplayFor(m => item.DanceTeam.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.CustomerDate)
            </td>
            <td></td>
            <td style="width:150px;">
                <div class="btn-group" role="group">


                    <a class="btn btn-secondary" asp-page="DeleteBooking" asp-route-Id="@item.Id" title="DeleteBooking"><i class="far fa-trash-alt"></i></a>


                </div>

            </td>
        </tr>

            }
        </table>
    }
</div>


